<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
    <center>
        <VBox>
            <Label text="New travelogue"/>
            <Label text="Begin date"/>
            <DatePicker fx:id="begDate"/>
            <Label text="End date"/>
            <DatePicker fx:id="endDate"/>
            <Label text="Title"/>
            <TextField fx:id="title"/>
            <Label text="Description"/>
            <TextArea fx:id="description"/>
            <Label text="author"/>
            <TextField fx:id="author"/>
            <Label text="Participants (separate them with coma)"/>
            <TextField fx:id="participants"/>
            <HBox>
                <Button fx:id="create" text="Create"/>
                <Button fx:id="previous" text="Previous"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
