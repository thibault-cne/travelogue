<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="newTravelogue" text="Create a new travelogue"/>
        </HBox>
    </top>
    <center>
        <VBox>
            <Label fx:id="author"/>
            <Label fx:id="title"/>
            <Label fx:id="description"/>
            <Label fx:id="begDate"/>
            <Label fx:id="endDate"/>
            <Label fx:id="participants"/>
            <Button fx:id="show" text="Show travelogue"/>
        </VBox>
    </center>
</BorderPane>
